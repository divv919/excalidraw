generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  username     String
  full_name String
  rooms     Room[]
  chats Shape[]
}

model Shape {
  id         Int      @id @default(autoincrement())
  userId     String
  user User @relation(fields: [userId], references: [id])
  created_at DateTime @default(now())
  roomId     Int 
  room Room @relation(fields: [roomId], references: [id])
  type    String
  clientX  Int?
  clientY Int?
  height  Int?
  width  Int?
  radiusX Int?
  radiusY Int?
  fromX Int?
  fromY Int?
  toX Int?
  toY Int?
  points     Json?
}

model Room {
  id         Int      @id @default(autoincrement())
  slug       String   @unique
  created_at DateTime @default(now())
  admin_id   String
  admin      User     @relation(fields: [admin_id], references: [id])
  chats Shape[]
  
}
